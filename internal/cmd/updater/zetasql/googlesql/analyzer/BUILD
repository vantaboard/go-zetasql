# This library is a dependency of the public analyzer to register all of the
# internal GoogleSQL rewriters. The internal analyzer does not depend on
# it directly. This allows rewriters to depend on :substitute without creating
# a circular dependency. Since all binaries that use analyzer depend on
# public:analyzer, all the internal rewriters will be linked and registered
# in such binaries.
cc_library(
    name = "all_rewriters",
    srcs = ["all_rewriters.cc"],
    hdrs = ["all_rewriters.h"],
    deps = [
        "//googlesql/analyzer/rewriters:aggregation_threshold_rewriter",
        "//googlesql/analyzer/rewriters:anonymization_rewriter",
        "//googlesql/analyzer/rewriters:builtin_function_inliner",
        "//googlesql/analyzer/rewriters:flatten_rewriter",
        "//googlesql/analyzer/rewriters:generalized_query_stmt_rewriter",
        "//googlesql/analyzer/rewriters:grouping_set_rewriter",
        "//googlesql/analyzer/rewriters:insert_dml_values_rewriter",
        "//googlesql/analyzer/rewriters:is_first_is_last_function_rewriter",
        "//googlesql/analyzer/rewriters:like_any_all_rewriter",
        "//googlesql/analyzer/rewriters:map_function_rewriter",
        "//googlesql/analyzer/rewriters:match_recognize_function_rewriter",
        "//googlesql/analyzer/rewriters:measure_type_rewriter",
        "//googlesql/analyzer/rewriters:multiway_unnest_rewriter",
        "//googlesql/analyzer/rewriters:nulliferror_function_rewriter",
        "//googlesql/analyzer/rewriters:order_by_and_limit_in_aggregate_rewriter",
        "//googlesql/analyzer/rewriters:pipe_assert_rewriter",
        "//googlesql/analyzer/rewriters:pipe_describe_rewriter",
        "//googlesql/analyzer/rewriters:pipe_if_rewriter",
        "//googlesql/analyzer/rewriters:pivot_rewriter",
        "//googlesql/analyzer/rewriters:registration",
        "//googlesql/analyzer/rewriters:row_type_rewriter",
        "//googlesql/analyzer/rewriters:sql_function_inliner",
        "//googlesql/analyzer/rewriters:sql_view_inliner",
        "//googlesql/analyzer/rewriters:subpipeline_stmt_rewriter",
        "//googlesql/analyzer/rewriters:typeof_function_rewriter",
        "//googlesql/analyzer/rewriters:unpivot_rewriter",
        "//googlesql/analyzer/rewriters:update_constructor_rewriter",
        "//googlesql/analyzer/rewriters:variadic_function_signature_expander",
        "//googlesql/analyzer/rewriters:with_expr_rewriter",
        "//googlesql/public:options_cc_proto",
        "@com_google_absl//absl/base",
    ],
)

